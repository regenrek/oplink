{
  "$schema": "../../../schema/oplink-servers.schema.json",
  "servers": {
    "linear": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://mcp.linear.app/mcp"],
      "auth": "oauth",
      "clientName": "oplink-linear-demo-test",
      "oauthRedirectUrl": "http://127.0.0.1:22228/oauth/callback",
      "tokenCacheDir": "./.tokens/linear",
      "description": "Linear hosted MCP server (OAuth)"
    },
    "discord": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@chinchillaenterprises/mcp-discord"],
      "env": {
        "DISCORD_TOKEN": "${DISCORD_BOT_TOKEN}"
      },
      "description": "Discord MCP server for sending messages via bot"
    }
  }
}
